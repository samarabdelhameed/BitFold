type Loan = record {
    loan_id : text;
    borrower : text;
    ordinal_utxo : text;
    borrowed_ckbtc : nat64;
    ltv_percent : nat8;
    status : text;
};

service : {
    deposit_utxo : (text, text) -> (text);
    borrow_ckbtc : (text, nat64) -> (text);
    repay_ckbtc : (text, nat64) -> (text);
    get_loan : (text) -> (opt Loan) query;
    list_loans : () -> (vec Loan) query;
}
